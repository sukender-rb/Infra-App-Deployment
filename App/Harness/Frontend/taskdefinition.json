{
  "family": "hpm-<+pipeline.variables.containername>-td",
  "executionRoleArn": "<+pipeline.variables.executionRoleArn>",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "<+pipeline.variables.cpu.toString()>",
  "memory": "<+pipeline.variables.memory.toString()>",
  "containerDefinitions": [
    {
      "name": "<+pipeline.variables.containername>",
      "image": "<+artifact.image>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": <+pipeline.variables.containerport>,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-create-group": "true",
          "awslogs-group": "/ecs/<+pipeline.variables.containername>",
          "awslogs-region": "<+pipeline.variables.region>",
          "awslogs-stream-prefix": "<+pipeline.variables.containername>"
        }
      }
    }
  ]
}
